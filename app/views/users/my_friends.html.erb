<h1>My friends</h1>
<div class="mt-5">
  <h3>Search friend</h3>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :friend, params[:friend], placeholder: "Search by email or name", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
          <%= fa_icon 'search' %>
          <%= 'Search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="friend_result"></div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>
